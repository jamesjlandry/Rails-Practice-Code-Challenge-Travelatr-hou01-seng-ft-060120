<h1>Create-a-Post</h1>

<%=form_for(@post) do |f| %>
<%=f.label :author%>
<%=f.collection_select(:blogger_id, @bloggers, :id, :name)%>
<br>
<br>
<%=f.label :destination%>
<%=f.collection_select(:destination_id, @destinations, :id, :name)%>
<br>
<br>
<%=f.label :title%>
<%=f.text_field :title%>
<br>
<br>
<%=f.label :content%>
<%=f.text_field :content%>
<br>
<%=f.submit "Make it so" %>

<%end%>